@model CreateCommentViewModel

<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label asp-for="Comment">Comment <span class="required">*</span></label>
            <textarea class="form-control" id="comment" name="Comment" rows="1" placeholder="Comment between 5 and 200 symbols..."></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-center">
        <button type="submit" class="btn btn-template-main"><i class="fa fa-comment-o"></i> Post comment</button>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
