<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="robots" content="all,follow">
    <meta name="googlebot" content="index,follow,snippet,archive">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Sport Zone</title>

    <meta name="keywords" content="">

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,500,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link href="~/lib/bootstrap/dist/css/animate.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/style.default.css" rel="stylesheet" id="theme-stylesheet">
    <link href="~/lib/bootstrap/dist/css/custom.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />
    <link href="~/lib/bootstrap/dist/css/owl.carousel.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/owl.theme.css" rel="stylesheet">
</head>

<body>
    <header>
        <!-- *** NAVBAR ***
        _________________________________________________________ -->
        <div class="navbar-affixed-top" data-spy="affix" data-offset-top="200">
            <div class="navbar navbar-default yamm" role="navigation" id="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand home" href="/">
                            <img src="~/img/NOVO.png" alt="Universal logo">
                        </a>
                        <div class="navbar-buttons">
                            <button type="button" class="navbar-toggle btn-template-main" data-toggle="collapse" data-target="#navigation">
                                <span class="sr-only">Toggle navigation</span>
                                <i class="fa fa-align-justify"></i>
                            </button>
                        </div>
                    </div>
                    <!--/.navbar-header -->
                    <div class="navbar-collapse collapse" id="navigation">
                        <ul class="nav navbar-nav navbar-left">
                            @if (User.IsInRole(WebConstants.AdministratorRole))
                            {
                                <li class="dropdown">
                                    <a href="javascript: void(0)" id="admin" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a></li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="News" asp-action="Index">News</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Forum" asp-action="Index">Forum</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Comments" asp-action="ForumComments">Comments</a>
                                        </li>

                                    </ul>
                                </li>
                            }
                            <li>
                                <a asp-area="News" asp-controller="NewsZone" asp-action="Index">News</a>
                            </li>
                            <li>
                                <a asp-area="Forum" asp-controller="Articles" asp-action="Index">Forum</a>
                            </li>
                        </ul>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </header>
    @if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
    {
        <div class="alert alert-success alert-dismissible text-center col-md-3" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            @TempData[WebConstants.TempDataSuccessMessageKey]
        </div>
    }
    @if (TempData.ContainsKey(WebConstants.TempDataErrorMessageKey))
    {
        <div class="alert alert-danger alert-dismissible text-center col-md-3" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            @TempData[WebConstants.TempDataErrorMessageKey]
        </div>
    }
    @RenderBody()
    <!-- *** FOOTER ***
    _________________________________________________________ -->
    <footer id="footer" >
        <div class="container">
            <div class="col-md-3 col-sm-6 pull-left">
                <h4>About us</h4>
                <p>This website is solution for <a href="https://softuni.bg/">SoftUni</a> practical project task for <strong>C# MVC Frameworks - ASP.NET Core.</strong> All resources used are for <strong>educational and presentation</strong> purposes! This site is non commercial</p>
            </div>
            <div class="col-md-6 col-sm-6 text-center">
                <img src="~/img/Untitled-3.png" />
            </div>
            <div class="col-md-3 col-sm-6 pull-right">
                <h4>Contact</h4>
                <p>
                    <strong>Sport Zone</strong>
                    <br>Borislav Dimitrov
                    <br>varbanov888@gmail.com
                    <br>Varna
                    <br>
                    <strong>Bulgaria</strong>
                </p>
                <hr class="hidden-md hidden-lg hidden-sm">
            </div>
        </div>
    </footer>
    <!-- /#footer -->
    <!-- *** FOOTER END *** -->
    <!-- *** COPYRIGHT ***
    _________________________________________________________ -->

    <div id="copyright">
        <div class="container">
            <div class="col-md-12">
                <p class="pull-left">&copy; @DateTime.UtcNow. Sport Zone</p>
                <p class="pull-right">
                    Template by <a href="https://bootstraptemple.com">Bootstrap Temple</a>
                    <!-- Please do not remove the backlink to us unless you have purchased the attribution-free license at https://bootstraptemple.com. It is part of the license conditions. Thanks for understanding :) -->
                </p>

            </div>
        </div>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')
    </script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/jquery.cookie.js"></script>
    <script src="~/lib/bootstrap/dist/js/waypoints.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery.counterup.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery.parallax-1.1.3.js"></script>
    <script src="~/lib/bootstrap/dist/js/front.js"></script>
    <script src="~/lib/bootstrap/dist/js/owl.carousel.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>