@using Microsoft.AspNetCore.Identity
@using SportZone.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-collapse collapse" id="navigation">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="javascript: void(0)" id="admin" class="dropdown-toggle" data-toggle="dropdown">@UserManager.GetUserName(User)<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa fa-user"></i> Account</a>
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <span><i class="fa fa-sign-out"></i> Sign out</span>
                        </a>
                    </li>

                </ul>
                <div class="hidden">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                    </form>
                </div>
            </li>
        </ul>
    </div>


}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
