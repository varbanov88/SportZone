@model NewsCommentsListingViewModel
@{
    int startPage = 1;
    int endPage = Model.TotalPages;

}
<div id="content">
    <div class="container">
        <div class="row">
            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->
            <div class="col-sm-2">

                <!-- *** MENUS AND FILTERS ***
                _________________________________________________________ -->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="panel-title">Comments</h3>
                    </div>

                    <div class="panel-body">
                        <ul class="nav nav-pills nav-stacked category-menu">
                            <li>
                                <a asp-area="Admin" asp-controller="Comments" asp-action="ForumComments">Forum  <span class="badge pull-right">@Model.TotalForumComments</span></a>
                            </li>
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Comments" asp-action="NewsComments">News <span class="badge pull-right">@Model.TotalComments</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- *** MENUS AND FILTERS END *** -->
            </div>
            <!-- /.col-md-3 -->
            <!-- *** LEFT COLUMN END *** -->
            <!-- *** RIGHT COLUMN ***
            _________________________________________________________ -->

            <div class="col-sm-10">
                <div class="row">
                    <div class="col-md-7">
                        <p class="text-muted lead">Delete only abusive or inappropriate comments!</p>
                    </div>
                    <div class="col-md-5">
                        <form asp-area="Admin" asp-controller="Comments" asp-action="NewsComments" role="search">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchText" placeholder="Search in news comments">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-template-main"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                News Title
                            </th>
                            <th>
                                Comment
                            </th>
                            <th>
                                Date
                            </th>
                            <th>Author</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in Model.Comments)
                        {
                            <tr>
                                <td>@comment.NewsTitle</td>
                                <td>@comment.Content</td>
                                <td>@comment.PublishDate</td>
                                <td>@comment.Author</td>
                                <td><a asp-area="Admin" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id" asp-route-zone="news" asp-route-page="@Model.CurrentPage" onclick="return confirm('Are sure wants to delete this comment?');" class="btn btn-xs btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.TotalComments > Model.Comments.Count())
                {
                    <div class="pages pull-left">
                        <ul class="pagination">
                            <li class="previous @(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
                                <a asp-route-page="@Model.PreviousPage"
                                   aria-label="Previous">
                                    «
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="active">
                                        <a asp-route-page="@i">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-route-page="@i">@i</a>
                                    </li>
                                }
                            }
                            <li class="next @(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
                                <a asp-route-page="@Model.NextPage"
                                   aria-label="Next">
                                    »
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>